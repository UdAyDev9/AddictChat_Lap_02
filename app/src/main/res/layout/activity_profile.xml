<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FFF"
  tools:context=".activities.ProfileActivity">

  <TextView
    android:id="@+id/textView3"
    android:textStyle="normal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:text="Profile"
    android:textColor="#ED181515"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/profile_toolbar" />

  <TextView
    android:id="@+id/displayName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:maxLength="15"
    android:text="UserName"
    android:textColor="#6F6666"
    android:textSize="17sp"
    app:layout_constraintBottom_toBottomOf="@+id/displayProfileImage"
    app:layout_constraintEnd_toStartOf="@+id/editUserNameImgBtn"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/displayProfileImage"
    app:layout_constraintTop_toTopOf="@+id/displayProfileImage"
    app:layout_constraintVertical_bias="0.552" />
  <View
    android:id="@+id/view2"
    android:layout_width="match_parent"
    android:layout_height="0.3dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp"
    android:background="#6F6666"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView3" />
  <android.support.v7.widget.Toolbar
    android:id="@+id/profile_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ToolbarTheme"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:titleTextColor="@color/white" />
  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/displayProfileImage"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    app:civ_border_color="@color/white"
    app:civ_border_width="2dp"
    android:src="@drawable/avtar_img"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/view2" />
  <TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_marginStart="16dp"
    android:drawableLeft="@drawable/info"
    android:drawablePadding="10dp"
    android:text="About"
    android:textSize="16sp"
    android:textColor="#3C2E2E"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/displayProfileImage" />
  <TextView
    android:id="@+id/statusTv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp"
    android:maxLength="63"
    android:gravity="start"
    android:text="I Love my County"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/textView5"
    app:layout_constraintTop_toBottomOf="@+id/textView5" />
  <View
    android:id="@+id/view3"
    android:layout_width="match_parent"
    android:layout_height="0.3dp"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="8dp"
    android:background="#6F6666"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/displayProfileImage" />
  <TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="Phone"
    android:textSize="16sp"
    android:textColor="#3C2E2E"
    app:layout_constraintStart_toStartOf="@+id/statusTv"
    app:layout_constraintTop_toBottomOf="@+id/statusTv" />
  <TextView
    android:id="@+id/displayPhone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="+91 8686736677"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="@+id/textView7"
    app:layout_constraintTop_toBottomOf="@+id/textView7" />
  <ImageButton
    android:id="@+id/edtimageButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:background="#FFF"
    android:src="@drawable/ic_edit_black_24dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/textView5" />
  <Button
    android:id="@+id/change_profile_btn"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:padding="10dp"
    android:layout_marginTop="24dp"
    android:text="Change Profile"
    android:textAllCaps="false"
    android:textColor="#F5EEEE"
    android:background="@drawable/rounded_corner_button"
    app:layout_constraintEnd_toEndOf="parent"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/displayPhone"
    android:visibility="gone"/>
  <ImageButton
    android:id="@+id/editUserNameImgBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:background="#FFF"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/displayName"
    android:src="@drawable/ic_edit_black_24dp" />
  <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:text="Alert Mode"
    android:textColor="#3C2E2E"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="@+id/displayPhone"
    app:layout_constraintTop_toBottomOf="@+id/displayPhone" />
  <TextView
    android:id="@+id/alert_mode_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Vibrate"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="@+id/textView4"
    app:layout_constraintTop_toBottomOf="@+id/textView4" />
  <ImageButton
    android:id="@+id/alert_mode_img_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="#FFF"
    app:layout_constraintTop_toTopOf="@+id/textView4"
    app:srcCompat="@drawable/ic_edit_black_24dp" />
</android.support.constraint.ConstraintLayout>