<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <android.support.v7.widget.CardView
    android:id="@+id/message_layout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bar_layout"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardElevation="8dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="9dp"
    app:cardBackgroundColor="@color/button_color"
    android:background="@color/button_color">

    <android.support.constraint.ConstraintLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/from_message2"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:padding="2dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="HiiHiiHiHiiHiHiiHiiHiHiiHiHiiHiiHiHiiHiHiiHiiHiHiiHiHiiHiiHiHiiHiHiiHiiHiHiiHiHiiHiiHiHiiHiHiiHiiHiHiiHiHiiHiiHiHiiHi"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
      <TextView
        android:id="@+id/from_time5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:fontFamily="serif"
        android:gravity="bottom"
        android:text="12:20Pm"
        android:textColor="#ED696363"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/from_message2" />
    </android.support.constraint.ConstraintLayout>
  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/to_message_layout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/message_layout2"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="9dp"
    app:cardBackgroundColor="@color/colorAccent"
    android:background="@color/colorAccent"
    android:layout_marginStart="10dp"
    >

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      >


      <TextView
        android:id="@+id/to_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="6dp"
        android:text="Hi"
        android:textColor="#ffffff"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/to_timee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:20Pm"
        android:fontFamily="serif"
        android:textColor="#ED696363"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"
        android:textSize="10sp"
        android:gravity="bottom"
        android:layout_below="@id/to_message"
        android:layout_marginLeft="30dp"

        android:layout_alignRight="@id/to_message"/>


    </RelativeLayout>
  </android.support.v7.widget.CardView>

</RelativeLayout>